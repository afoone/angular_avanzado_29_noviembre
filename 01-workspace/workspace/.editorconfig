# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8 # juego de caracteres
indent_style = space # el otro es tab
indent_size = 2 # 2 (espacios)
# tab_width = 2 # número de columnas de indentación que representa un tabulador
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

#[*.ts]
#[*.?s] # selecciona todos los ficheros js y ts y tods los demas
[*.[jt]s] # sólo los ficheros js y ts
# [*.js, *.ts]
# [archivo[1..5].json] seleciona archivo1.json archivo2.json ... archivo5.json
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
